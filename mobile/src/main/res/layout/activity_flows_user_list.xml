<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="com.adarshhasija.flows.FlowsUserListActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/greetingsLayout"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textGreetings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/feelings"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#ff0a0a0a" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/blackLine"
        android:layout_height="2dp"
        android:layout_below="@id/greetingsLayout"
        android:layout_centerHorizontal="true"
        android:background="#f7111111"></RelativeLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/emptyView"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- <TextView android:text="@string/list_empty" android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/textViewEmpty" />  -->

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/button_view_cloud"
            android:text="@string/view_cloud"
            android:contentDescription="@string/view_cloud"
            android:textColor="#FFFFFFFF"
            android:background="#FF0000FF"
            android:layout_marginTop="8dp" />

    </LinearLayout>



    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/blackLine"
        android:id="@+id/list" />


</RelativeLayout>
